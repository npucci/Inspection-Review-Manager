<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.nicco.inspectionReviewManager.ArchiveReviewListFragment"
        android:layout_width="match_parent"
        android:layout_height="592dp" />

    <LinearLayout
        android:id="@+id/linearLayoutMainHorizontal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEditReview"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Review" />

        <Button
            android:id="@+id/buttonInspectionReview"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inspection Review" />

    </LinearLayout>

</LinearLayout>